<h1>All tours</h1>
<div class="row">
  <div class="col-md-12">
    <% if @cities %>
      <% @cities.each do |city| %>
        <h2><%= link_to city.name, city_path(city) %></h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Tour Name</th>
              <th>Tour Description</th>
            </tr>
          </thead>
          <tbody>
            <% city.tours.recent.each do |tour| %>
            <tr>
              <td><%= tour.id %></td>
              <td><%= link_to tour.name, tour_path(tour) %></td>
              <td><%= truncate tour.description %></td>
            </tr>
            <% end -%>
          </tbody>
        </table>
      <% end -%>
    <% else %>
      <p>No cities found</p>
    <% end -%>
  </div>
</div>
